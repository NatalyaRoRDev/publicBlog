<h1>Edit article</h1>

<%= form_for :article, url: article_path(@article), 
                       method: :put do |f| %>
  <p>
  	<%= f.label :title %><br />
  	<%= f.text_field :title %>
  </p>
  <p>
  	<%= f.label :text %><br />
  	<%= f.text_area :text %>
  </p>
  <p>
  	<%= f.label :author %><br />
  	<%= f.text_field :author %>
  </p>
  <p><br />
    <%= f.submit 'Change', :class => 'btn btn-success' %>
  </p>	
<% end %>