<% @articles.each do |article| %>
  <h2><%= article.title %></h2>
  <p><%= article.text %></p>
  <p><%= article.author %></p>

  <%= link_to 'Show', article_path(article) %> |
  <%= link_to 'Edit', edit_article_path(article) %> |
  <%= link_to 'Destroy', article_path(article),
  method: :delete, 
  data: {confirm: 'Do you want to delete the article?'} %>
  <hr />
<% end %>